<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".AddEventActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"

            android:layout_height="51dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvtitleevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlack"
                android:fontFamily="@font/habibi"
                android:text="@string/nuevoevento"
                android:textAlignment="center"
                android:textColor="@color/colorPrimahghgryDark2"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvidtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="50sp"
                android:visibility="gone"
                 />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/img1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            app:layout_constraintVertical_bias="0.043">


            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout5"
                        android:layout_width="392dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/habibi"
                            android:text="@string/Clase_"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimahghgryDark2"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toStartOf="@+id/spinnuevoevento"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView12"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:fontFamily="@font/habibi"
                            android:text="@string/fecha_"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimahghgryDark2"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="@+id/textView39"
                            app:layout_constraintTop_toBottomOf="@+id/textView13" />

                        <Button
                            android:id="@+id/btnselecttype"
                            android:layout_width="280dp"
                            android:layout_height="52dp"
                            android:background="@color/colorBlack"
                            android:fontFamily="@font/habibi"
                            android:text="@string/selecttype"
                            android:textColor="@color/colorLow"
                            android:textSize="12sp"

                            app:layout_constraintBottom_toBottomOf="@+id/textView37"


                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView37"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:fontFamily="@font/habibi"
                            android:text="@string/Prioridad"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimahghgryDark2"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="@+id/textView40"
                            app:layout_constraintTop_toBottomOf="@+id/textView40" />

                        <Spinner
                            android:id="@+id/spinnuevoevento"
                            android:layout_width="280dp"
                            android:layout_height="30dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView40"
                            app:layout_constraintEnd_toEndOf="@+id/btnselecttype"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="@+id/btnselecttype"
                            app:layout_constraintTop_toTopOf="@+id/textView40"
                            app:layout_constraintVertical_bias="0.257" />

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/habibi"
                            android:text="@string/Materia_"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimahghgryDark2"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="@+id/textView37"
                            app:layout_constraintTop_toBottomOf="@+id/btnaddnew" />

                        <RadioGroup
                            android:id="@+id/rgeventonuevo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="@+id/textView39"
                            app:layout_constraintEnd_toEndOf="@+id/ettitle"
                            app:layout_constraintStart_toStartOf="@+id/ettitle"
                            app:layout_constraintTop_toTopOf="@+id/textView39">

                            <RadioButton
                                android:id="@+id/rbaltanuevoevento"
                                android:layout_width="8dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="true"
                                android:fontFamily="@font/habibi"
                                android:text="@string/palta"
                                android:textColor="@color/colorPrimahghgryDark2" />

                            <RadioButton
                                android:id="@+id/rbmedianuevoevento"
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/habibi"
                                android:text="@string/pmedia"
                                android:textColor="@color/colorPrimahghgryDark2" />

                            <RadioButton
                                android:id="@+id/rbbajanuevoevento"
                                android:layout_width="12dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/habibi"
                                android:text="@string/pbaja"
                                android:textColor="@color/colorPrimahghgryDark2" />

                        </RadioGroup>

                        <EditText
                            android:id="@+id/etfecha"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input"
                            android:ems="10"
                            android:fontFamily="@font/habibi"
                            android:inputType="date"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textView11"
                            app:layout_constraintEnd_toEndOf="@+id/ettitle"
                            app:layout_constraintStart_toStartOf="@+id/ettitle"
                            app:layout_constraintTop_toTopOf="@+id/textView11" />

                        <EditText
                            android:id="@+id/ethora"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input"
                            android:ems="10"
                            android:fontFamily="@font/habibi"
                            android:inputType="time"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textView12"
                            app:layout_constraintEnd_toEndOf="@+id/etfecha"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="@+id/etfecha"
                            app:layout_constraintTop_toTopOf="@+id/textView12" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:fontFamily="@font/habibi"
                            android:text="@string/Hora_"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimahghgryDark2"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="@+id/textView11"
                            app:layout_constraintTop_toBottomOf="@+id/textView11" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="32dp"
                            android:fontFamily="@font/habibi"
                            android:text="@string/title_"
                            android:textAlignment="center"

                            android:textColor="@color/colorPrimahghgryDark2"
                            android:textColorHighlight="@color/colorLow"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="@+id/textView37"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView39" />

                        <EditText
                            android:id="@+id/ettitle"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input"
                            android:ems="10"
                            android:fontFamily="@font/habibi"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textView13"
                            app:layout_constraintStart_toStartOf="@+id/ethora"
                            app:layout_constraintTop_toTopOf="@+id/textView13"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/textView46"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:fontFamily="@font/habibi"
                            android:text="@string/temario_"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimahghgryDark2"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="@+id/textView12"
                            app:layout_constraintTop_toBottomOf="@+id/textView12" />

                        <EditText
                            android:id="@+id/etnotes"
                            android:layout_width="280dp"
                            android:layout_height="140dp"
                            android:background="@color/colorBlack"
                            android:fontFamily="@font/habibi"
                            android:inputType="textMultiLine"
                            android:overScrollMode="always"

                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/colorLow"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView46"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/ethora"
                            app:layout_constraintTop_toTopOf="@+id/textView46"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/btnaddnew"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBlack"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimahghgryDark2"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="@+id/btnselecttype"
                            app:layout_constraintStart_toStartOf="@+id/btnselecttype"
                            app:layout_constraintTop_toBottomOf="@+id/btnselecttype" />

                        <Button
                            android:id="@+id/btnguardarnuevoevento"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="56dp"
                            android:background="@color/colorBlack"
                            android:fontFamily="@font/habibi"
                            android:text="@string/guardar"
                            android:textColor="@color/colorGold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etnotes" />

                        <Button
                            android:id="@+id/btncancelarnuevoevento"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@color/colorGray"
                            android:fontFamily="@font/habibi"
                            android:text="@string/cancelar"
                            android:textColor="@color/colorGold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btnguardarnuevoevento" />

                        <Button
                            android:id="@+id/btneventdelete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:background="@color/colorHint"
                            android:fontFamily="@font/habibi"
                            android:text="@string/elim"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btncancelarnuevoevento" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tvidsube"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>