<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragments.TeacherFragment">

    <TextView
        android:id="@+id/tvidcatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativemat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/etbuscardocentename"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:fontFamily="@font/habibi"
            android:hint="@string/buscar"
            android:inputType="textPersonName"
            android:textColor="#0A0A09"
            android:textSize="20sp" />


        <RadioGroup
            android:id="@+id/rgt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etbuscardocentename"

            android:layout_marginEnd="20dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <RadioButton
                android:id="@+id/rdname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/habibi"
                android:text="@string/mname"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rdsur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/habibi"
                android:text="@string/msur"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rdnick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/habibi"
                android:text="@string/mnick"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/habibi"
                android:text="@string/msub"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:checked="true"
                android:fontFamily="@font/habibi"
                android:text="@string/mall"
                android:textSize="14sp" />
        </RadioGroup>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="782dp"
            android:layout_below="@id/rgt"
            android:layout_alignStart="@+id/etbuscardocentename"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/lvteachers"
                    android:layout_width="match_parent"
                    android:layout_height="765dp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/fab_teacher"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_input_add" />
</FrameLayout>