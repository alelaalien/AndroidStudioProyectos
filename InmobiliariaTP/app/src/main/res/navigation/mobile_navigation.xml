<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.inmobiliariatp.ui.home.PropiedadesFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_detalle"
            app:destination="@id/detalle" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.inmobiliariatp.ui.gallery.InquilinosFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.inmobiliariatp.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_tools"
        android:name="com.example.inmobiliariatp.ui.tools.ToolsFragment"
        android:label="@string/menu_tools"
        tools:layout="@layout/fragment_tools" />

    <fragment
        android:id="@+id/nav_share"
        android:name="com.example.inmobiliariatp.ui.share.ShareFragment"
        android:label="@string/menu_share"
        tools:layout="@layout/fragment_share" >
        <action
            android:id="@+id/action_nav_share_to_editarPerfil"
            app:destination="@id/editarPerfil" />
    </fragment>

    <fragment
        android:id="@+id/nav_send"
        android:name="com.example.inmobiliariatp.ui.send.SendFragment"

        tools:layout="@layout/fragment_send" />
    <fragment
        android:id="@+id/detalle"
        android:name="com.example.inmobiliariatp.Detalle"
        android:label="fragment_detalle"
        tools:layout="@layout/fragment_detalle" />
    <fragment
        android:id="@+id/editarPerfil"
        android:name="com.example.inmobiliariatp.editarPerfil"
        android:label="fragment_editar_perfil"
        tools:layout="@layout/fragment_editar_perfil" />
    <fragment
        android:id="@+id/pagosFragment"
        android:name="com.example.inmobiliariatp.PagosFragment"
        android:label="fragment_pagos"
        tools:layout="@layout/fragment_pagos" />
    <fragment
        android:id="@+id/contratosFragment"
        android:name="com.example.inmobiliariatp.contratosFragment"
        android:label="fragment_contratos"
        tools:layout="@layout/fragment_contratos" />
</navigation>